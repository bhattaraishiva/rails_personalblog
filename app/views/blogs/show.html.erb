<%- model_class = Blog -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>

<header class = "blog-header" style= "background-image: url('images/block-bg.jpg')">
	<div class = "container">
		<div class = "row">
				<div class = "blog-heading">
					<h1><%= @blog.title %></h1>
					<h6><%= @blog.created_by %><%= @blog.created_at%></h6>
				</div>
		</div>
	</div>
</header>
</div>

<div class="parallax-pattern-overlay">
  <div class = "container">
	   <div class = "row">
       <div class = "col-lg-8 col-lg-offset-2">
         <h4 class = "education-title"><%= @blog.para_heading %></h4>
          <div class="modal-body modal-spa">
            <div class="experience">
              <article>
                <dl class="dl-horizontal">
                  <dd><%= @blog.paragraph %></dd>
                </dl>
              </article>
            </div>
          </div>
       </div>
     </div>
  </div>
</div>

<%= link_to t('.back', :default => t("helpers.links.back")),
              blogs_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_blog_path(@blog), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              blog_path(@blog),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>


<h3>Comments</h3>
<%= form_for [@blog, Comment.new] do |f| %>
<%= f.text_area :body, placeholder: "Add a comment" %><br/>
<%= f.submit "Add Comment" %>
<% end %>

<ul>
  <%= render partial: 'comments/comment', collection: @blog.comments %>
</ul>
